{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@lib/user": [
        "libs/user/src"
      ],
      "@lib/user/*": [
        "libs/user/src/*"
      ],
      "@lib/jwt-access-token": [
        "libs/jwt-access-token/src"
      ],
      "@lib/jwt-access-token/*": [
        "libs/jwt-access-token/src/*"
      ],
      "@lib/jwt-refresh-token": [
        "libs/jwt-refresh-token/src"
      ],
      "@lib/jwt-refresh-token/*": [
        "libs/jwt-refresh-token/src/*"
      ],
      "@lib/global-nest": [
        "libs/global-nest/src"
      ],
      "@lib/global-nest/*": [
        "libs/global-nest/src/*"
      ],
      "@lib/jwt-password-token": [
        "libs/jwt-password-token/src"
      ],
      "@lib/jwt-password-token/*": [
        "libs/jwt-password-token/src/*"
      ],
      "@lib/email-factory": [
        "libs/email-factory/src"
      ],
      "@lib/email-factory/*": [
        "libs/email-factory/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}