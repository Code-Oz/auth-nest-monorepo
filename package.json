{
  "name": "auth-nest-monorepo",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^6.7.2",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "mongoose": "^5.9.7",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.11.11",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.7.8",
    "@types/node": "^12.7.5",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/__tests__/**/*spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "apps/**/*.ts",
      "libs/**/*.ts",
      "!*/**/*.module.ts",
      "!*/**/*.schema.ts",
      "!*/**/*.types.ts",
      "!*/**/*.dto.ts",
      "!*/**/index.ts",
      "!*/**/main.ts",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/user/(.*)": "<rootDir>/libs/user/src/$1",
      "@app/user": "<rootDir>/libs/user/src",
      "@app/jwt-access-token/(.*)": "<rootDir>/libs/jwt-access-token/src/$1",
      "@app/jwt-access-token": "<rootDir>/libs/jwt-access-token/src",
      "@app/jwt-refresh-token/(.*)": "<rootDir>/libs/jwt-refresh-token/src/$1",
      "@app/jwt-refresh-token": "<rootDir>/libs/jwt-refresh-token/src",
      "@app/lib-global-nest/(.*)": "<rootDir>/libs/lib-global-nest/src/$1",
      "@app/lib-global-nest": "<rootDir>/libs/lib-global-nest/src",
      "@app/jwt-password-token/(.*)": "<rootDir>/libs/jwt-password-token/src/$1",
      "@app/jwt-password-token": "<rootDir>/libs/jwt-password-token/src"
    }
  }
}